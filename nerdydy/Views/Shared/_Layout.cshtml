<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/additional")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrapper">
        <div class="overlay"></div>

        <!-- Sidebar -->
        <nav class="navbar navbar-inverse navbar-fixed-top" id="sidebar-wrapper" role="navigation">
            <ul class="nav sidebar-nav">
                <li class="sidebar-brand">
                    @Html.ActionLink("Nerdydy", "Index", "Home", new { area = "" }, new { @class = "sidebar-brand" })
                </li>
                @if (!Request.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "sidebar-brand" })
                    </li>
                    <li>
                        @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "sidebar-brand" })
                    </li>

                    //foreach "game":

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="gameIcon" style="background: url(../../GameIcons/59bec4742408c_rainbow_six_siege_logo_by_jmk_prime-.ico)"></span> Rainbow 6 <span class="arrow"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header"><b>Content</b></li>
                            <li><a href="#">Videos</a></li>
                            <li><a href="#">Screenshots</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="gameIcon" style="background: url(../../GameIcons/59bec4742408c_rainbow_six_siege_logo_by_jmk_prime-.ico)"></span> PUBG <span class="arrow"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header"><b>Content</b></li>
                            <li><a href="#">Videos</a></li>
                            <li><a href="#">Screenshots</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="gameIcon" style="background: url(../../GameIcons/59bec4742408c_rainbow_six_siege_logo_by_jmk_prime-.ico)"></span> Rocket League <span class="arrow"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header"><b>Content</b></li>
                            <li><a href="#">Videos</a></li>
                            <li><a href="#">Screenshots</a></li>
                        </ul>
                    </li>
                }
                else {
                    // CRUD SITES

                }


                @Html.Partial("_LoginPartial")
            </ul>
        </nav>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button type="button" class="hamburger is-closed animated fadeInLeft" data-toggle="offcanvas">
                <span class="hamb-top"></span>
                <span class="hamb-middle"></span>
                <span class="hamb-bottom"></span>
            </button>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="container body-content">
                            @RenderBody()
                            <hr />
                            <footer>
                                <p>&copy; @DateTime.Now.Year - Nerdydy</p>
                            </footer>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/LayoutAnimation.js")
    @RenderSection("scripts", required: false)
</body>
</html>
